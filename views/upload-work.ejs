<%- include('includes/header')%>
  
  <div class="container py-md-5 container--narrow">
      <div class="col-lg-7 py-3 py-md-5">
          <h1 class="display-3">Please upload your work for today</h1>      
          <p class="lead text-muted">By uploading your work, you are declaring that although you may have had some help from your instructor, it is your own work.</p>
        </div>
        <% errors.forEach(function(message){%>
          <div class="alert alert-danger text-center"><%=message%></div>
          <%})%>
          <% if (success==true){%>
            <div class="alert alert-success text-center">The file has been uploaded</div>
            <%}%>
    <form action="/upload-file" enctype="multipart/form-data" method="POST">
      <div class="form-group">
        <label for="upload-title" class="text-muted mb-1"><small>Title</small></label>
        <input name="title" id="upload-title" class="form-control form-control-lg form-control-title" type="text" placeholder="" required>
        <select name="course" id="upload-course"  required>
          <% courses.forEach((course)=>{
            console.log(course)%>
            <option value="<%=course.CourseName%>"><%=course.CourseName%></option>
            <% }) %>
          </select>
      </div>
      <div class="form-group">
          <label for="post-body" class="text-muted mb-1"><small>Select File</small></label>
          <input type="file" name="myFiles" multiple required>
         </div>

      <div class="form-group">
        <label for="upload-body" class="text-muted mb-1"><small>Optional Comments</small></label>
        <textarea name="comments" id="upload-body" class="body-content medium-textarea form-control" type="text"></textarea>
      </div>
      
      <input type="hidden" name="_csrf" value="<%=  %>"/>
      <button class="btn btn-primary">Upload File</button>
    </form>
  </div>
  
  <%-include('includes/footer')%>