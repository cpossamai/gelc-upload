          <button class="Edit-post-button text-danger" data-toggle="tooltip" data-placement="top" title="Edit"><i class="fas fa-edit"></i></button>
        </form>
        <a href="/course/<%= course._id %>/content" class="text-primary mr-2" data-toggle="tooltip" data-placement="top" title="Edit Content">Edit Content</a>
       
      </li>
   <% })%>
